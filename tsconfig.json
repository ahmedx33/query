{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,          
    "declarationDir": "./dist/types",
    "outDir": "./dist",            
    "rootDir": "./packages",
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist"],
}
